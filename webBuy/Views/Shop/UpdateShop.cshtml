@model webBuy.Models.Shop

@{
    ViewBag.Title = "Update Shop";
    Layout = "~/Views/Shared/_sellerLayout.cshtml";
}

<form action="" method="post" class="mt-5">
    <h4>Update Shop</h4>
    @*@if (TempData["msg"] != null)
        {
            <div class="alert alert-danger small" role="alert">
                @TempData["msg"]
            </div>
        }
        else
        {
            <br />
