
@{
    ViewBag.Title = "withdraw";
    Layout = "~/Views/Shared/_sellerLayout.cshtml";
}


<div class="container">
    <h2>withdraw</h2><br />
    <h4>Balance: @ViewBag.Shop.balance</h4>
    <h5>@ViewBag.Shop.setComission% on each withdraw</h5>
    <h5>Withdraw amount:</h5>
    @if (TempData["withdraw"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["withdraw"]
        </div>
    }
    <form method="post" class="form-inline">

        <div class="form-group mx-sm-3 mb-2">
            <label for="amount" class="sr-only">Type the amount</label>
            <input type="number" step="0.01" name="amount" class="form-control" id="amount" placeholder="Type the amount">
            @if (TempData["empty"] != null)
            {
                <small style="color: red">@TempData["empty"]</small>
            }
        </div>
        <button type="submit" class="btn btn-success mb-2">Withdraw</button>
    </form>
</div>